apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-deployment
  labels:
    app: hello
spec:
  replicas: 3
  selector:
    matchLabels:
      app: hello
  template:
    metadata:
      labels:
        app: hello
        run: deployment
    spec:
      containers:
      - name: hello
        image: kennychennetman/hello:v4
        command: ['python', 'app.py']
        ports:
        - containerPort: 80
