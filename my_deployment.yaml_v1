apiVersion: apps/v1
kind: Deployment
metadata:
  name: friendlyhello-deployment
  labels:
    app: friendlyhello
spec:
  replicas: 3
  selector:
    matchLabels:
      app: friendlyhello
  template:
    metadata:
      labels:
        app: friendlyhello
        run: deployment
    spec:
      containers:
      - name: friendlyhello
        image: kennychennetman/friendlyhello:v4
        command: ['python', 'app.py']
        ports:
        - containerPort: 80
